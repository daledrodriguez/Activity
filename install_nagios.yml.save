# This is the playbook for installing Nagios on remote servers

---

- hosts: all
  become: true
  pre_tasks:

    - name: dnf and epel installation (CentOS)
      c: epel-release
      when: ansible_distribution == "CentOS"

    - name: dpkg installation (Ubuntu)
      apt:
        name: dpkg
        state: present
      when: ansible_distribution == "Ubuntu"

    - name: install updates (CentOS)
      dnf:
        name: "*"
        update_cache: yes
      when: ansible_distribution == "CentOS"

    - name: install updates (Ubuntu)
      apt:
        upgrade: dist
        update_cache: yes
      when: ansible_distribution == "Ubuntu"

- hosts: ubuntu_nagios
  become: true
  roles:
    - ubuntu_nagios

- hosts: centos_nagios
  become: true
  roles:
    - centos_nagios
